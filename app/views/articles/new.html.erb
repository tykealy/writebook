<% content_for(:title) { "Create a new article" } %>

<% content_for :header do %>
  <nav>
    <%= link_to root_path, class: "btn flex-item-justify-start" do %>
      <%= image_tag "arrow-left.svg", aria: { hidden: true }, size: 24 %>
      <span class="for-screen-reader">Cancel and go back</span>
    <% end %>
  </nav>
<% end %>

<%= render "articles/form", article: @article, creating_user: Current.user, users: @users %>

<% content_for :footer do %>
  <nav class="new-book-btn flex justify-center pad">
    <button type="submit" form="article-editor" class="btn btn--reversed txt-medium--responsive" aria-label="Create article" title="Create article">
      <%= image_tag "arrow-right.svg", aria: { hidden: true }, size: 24 %>
    </button>
  </nav>
<% end %>
